<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#354665"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="7dp"
        android:text="Reading Book List"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:gravity="center"
        android:background="#0E67B5"
        android:textSize="35sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="0dp"
                android:id="@+id/tvBorName"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#AED6F1"
                android:gravity="center"
                android:text="Borrower Name"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="0dp"
                android:id="@+id/tvBookName"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#DAF7A6"
                android:gravity="center"
                android:text="Book Name"
                android:textSize="20dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="7dp"
        android:layout_marginLeft="7dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="0dp"
                android:id="@+id/tvBorDate"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#F5B7B1"

                android:textSize="20dp"/>
        </LinearLayout>

    </LinearLayout>
