<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/librarybackground2">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.1"
    android:background="@color/black">
    <Button
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:id="@+id/give"
        android:text="Give Book"/>
    <Button
        android:layout_width="0dp"
        android:layout_weight="1"
        android:id="@+id/status"
        android:layout_height="match_parent"
        android:text="Stock"/>
    <Button
        android:layout_width="0dp"
        android:layout_weight="1"
        android:id="@+id/list"
        android:layout_height="match_parent"
        android:text="Borrow List"/>
    <Button
        android:layout_width="0dp"
        android:layout_weight="1"
        android:id="@+id/update"
        android:layout_height="match_parent"
        android:text="Update"/>

</LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Admin"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:background="#b3211f22"
        android:textStyle="bold"
        android:gravity="center">
    </TextView>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="8dp"
        android:background="#b3211f22"
        android:paddingRight="8dp"
        android:padding="16dp">
        <TableRow>
            <TextView
                android:textSize="18sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="Book Name"/>
            <EditText
                android:textSize="17sp"
                android:textColor="@color/white"
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:backgroundTint="@color/white"
                android:inputType="text"/>
        </TableRow>
        <TableRow>
            <TextView
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:text="Author's Name" />
            <EditText
                android:textSize="17sp"
                android:textColor="@color/white"
                android:id="@+id/authname"
                android:inputType="textPersonName"
                android:layout_width="0dp"
                android:backgroundTint="@color/white"

                android:layout_weight="18"
                android:layout_marginStart="15dp" />
        </TableRow>
        <TableRow>
            <TextView
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:text="Edition"/>
            <EditText
                android:textSize="17sp"
                android:textColor="@color/white"
                android:id="@+id/edition"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:backgroundTint="@color/white"
                android:inputType="number"/>
        </TableRow>
        <TableRow>
            <TextView
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:text="Book Genre"/>
            <EditText
                android:textSize="17sp"
                android:textColor="@color/white"
                android:id="@+id/gen"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:backgroundTint="@color/white"
                android:inputType="text"/>
        </TableRow>
        <TableRow>
            <TextView
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:text="Shelf Number"/>

            <EditText
                android:textSize="17sp"
                android:textColor="@color/white"
                android:id="@+id/shelf"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:backgroundTint="@color/white"
               />
        </TableRow>

        <TableRow>
            <TextView
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:text="Copy Available"/>

            <EditText
                android:textSize="17sp"
                android:textColor="@color/white"
                android:id="@+id/copy"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:backgroundTint="@color/white"
               />
        </TableRow>
        <TableRow
            android:paddingTop="15dp">
            <TextView
                android:textSize="18sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="Type"/>
            <RadioGroup
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="wrap_content"

                android:orientation="vertical">
                <RadioButton
                    android:id="@+id/available"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="Only readable"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="0dp"/>
                <RadioButton

                    android:id="@+id/notavailable"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="Borrowable"

                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_weight="2"
                    android:layout_height="0dp"/>

            </RadioGroup>
        </TableRow>
    </TableLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#b3211f22"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:layout_height="match_parent"
            android:text="Back"

            android:textColor="#000000"/>
        <LinearLayout
            android:layout_width="2dp"
            android:background="@color/black"
            android:layout_height="match_parent"/>
        <Button

            android:id="@+id/save"

            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Save"
            android:textSize="20sp"

            android:textColor="#000000"/>
    </LinearLayout>
</LinearLayout>