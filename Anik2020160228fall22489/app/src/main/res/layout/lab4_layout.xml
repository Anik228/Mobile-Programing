<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9A00C8"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="0.8">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Singup"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="6"
        android:background="@color/white">

        <TableRow
            android:id="@+id/Namerow"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:textSize="20sp"
                android:text="Name:"/>
            <EditText
                android:id="@+id/Name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:inputType="textPersonName"/>
        </TableRow>


        <TableRow
            android:id="@+id/Emailrow"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:textSize="20sp"
                android:text="Email:"/>
            <EditText
                android:id="@+id/Email"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:inputType="textEmailAddress"/>
        </TableRow>
        <TableRow
            android:id="@+id/Phonerow"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:textSize="20sp"
                android:text="Phone:"/>
            <EditText
                android:id="@+id/Phone"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:inputType="phone"/>
        </TableRow>
        <TableRow
            android:id="@+id/Useridrow"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:textSize="20sp"
                android:text="User ID:"/>
            <EditText
                android:id="@+id/Userid"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:inputType="number"/>
        </TableRow>
        <TableRow
            android:id="@+id/Passrow"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:textSize="20sp"
                android:text="Password:"/>
            <EditText
                android:id="@+id/Pass"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:inputType="textPassword"/>
        </TableRow>
        <TableRow
            android:id="@+id/Repassrow"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:textSize="20sp"
                android:text="Re-Password:"/>
            <EditText
                android:id="@+id/Repass"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:inputType="textPassword"/>
        </TableRow>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="120dp"
            android:layout_height="0dp"
            android:layout_weight="4">
            <CheckBox
                android:id="@+id/rememberuser"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remember User ID" />
            <CheckBox
                android:id="@+id/rememberpass"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remember Password"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/login"
            android:orientation="horizontal"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:layout_height="0dp">
            <TextView
                android:id="@+id/Already"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Already have an account?">

            </TextView>
            <TextView
                android:id="@+id/Login"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#3358FF"
                android:text=" Login">
            </TextView>
        </LinearLayout>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.5">
        <Button
            android:id="@+id/exit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Exit"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="#9A00C8"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/Exit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="||"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="#9A00C8"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/Go"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Go"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="#9A00C8"
            android:layout_weight="1"/>


    </LinearLayout>

</LinearLayout>